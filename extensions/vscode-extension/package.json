{
  "name": "vive-coders-security",
  "displayName": "Vive Coders Security",
  "description": "AI-powered security scanning for your code",
  "version": "1.0.0",
  "publisher": "vivecoders",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "viveCodersSecurity.scanFile",
        "title": "Scan File for Security Issues"
      },
      {
        "command": "viveCodersSecurity.scanWorkspace",
        "title": "Scan Workspace for Security Issues"
      }
    ],
    "configuration": {
      "title": "Vive Coders Security",
      "properties": {
        "viveCodersSecurity.apiUrl": {
          "type": "string",
          "default": "http://localhost:3001",
          "description": "API URL for Vive Coders Security backend"
        },
        "viveCodersSecurity.enableAutoScan": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan files on save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}

